<div class="links-show-pet">
  <div>
    <%= link_to '< Return to search results', pets_path %>
  </div>

  <div>
    <% if policy(@pet).edit? %>
    <%= link_to "Edit", edit_pet_path(@pet), class: "btn btn-success" %>
    <% end %>
    <% if policy(@pet).destroy? %>
    <%= link_to 'Delete', pet_path(@pet),
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: "btn btn-danger" %>
    <% end %>
  </div>
</div>

<div class="card-show-pet row">
  <div class="card-show-pet-image col">
    <%= cl_image_tag @pet.photos.first.key,
        height: 200,
        width: 200,
        crop: :fill,
        class: "show-pet-image" %>
  </div>

  <div class="card-show-pet-details col">
    <h1><%= @pet.name %> </h1>
    <h3><%= @pet.age %> years old</h3>
    <p><%= @pet.gender %> - <%= @pet.species %></p>
    <p><%= @pet.description %></p>
    <%# <% if policy(Adoption).create? %>
    <% unless current_user.pets.include?(@pet) %>
    <%= button_to "Adopt me!", pet_adoptions_path(@pet), method: :create, data: { confirm: "You are requesting the adoption of #{@pet.name}" }, class: "btn-adoption" %>
    <% end %>
  </div>

    <% if policy(@pet).destroy? %>
    <%= link_to 'Delete', pet_path(@pet),
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: "btn btn-danger" %>
    <% end %>

  <div class="card-show-pet-history col">
    <h3>History</h3>
    <p><%= @pet.history %></p>
  </div>

  <div class="card-show-pet-health col">
    <h3>Health Stats</h3>
    <p><%= @pet.gender == 'male' ? 'He is ' : 'She is ' %><%= @pet.vaccinated ? 'fully vaccinated' : 'not vaccinated yet' %> and <%= @pet.castrated ? '' : 'not' %> castrated</p>
  </div>
</div>

<% @pet.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
